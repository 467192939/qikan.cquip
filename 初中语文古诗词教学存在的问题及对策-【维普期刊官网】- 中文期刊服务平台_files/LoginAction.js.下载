            //checkUserKind();
            var qrimgstr = "";//二维码字符
            var iCount;
            function loadQr() {
                if (iCount != null) {
                    return;
                }
                $.ajax({
                    url:"/RegistLogin/WebQrStringCreate?" + Math.random(),
                    dataType: "json",
                    async: true,
                    beforeSend: function () {
                        //loadding();
                    },
                    complete: function () {
                        //loaddingClose();
                    },
                    success: function (json) {
                        if (json.code == 200) {
                            $("#qrImglogin").attr("src", "/RegistLogin/QRCodeCreateHander?qrstr=" + json.qrstr);
                            qrimgstr = json.qrstr;
                            //console.log(qrimgstr);
                            //console.log(new Date());
                            iCount = setInterval(show, 3000);
                            //show();
                        }
                        else {
                            layer.msg(json.text);
                        }
                    },
                    error: function (json) {

                    }
                });
            }//生成
            function show() {
                if ($("#login").is(":hidden")) {
                    return;
                }
                if ($('#login ul li').eq(0).hasClass("layui-this")) {
                    return;
                }
                var timestamp = new Date().getTime();
                $.ajax({
                    url:"/RegistLogin/WebQrAutoLogin?qrstrOriginal=" + qrimgstr + '&time=' + timestamp,
                    dataType: "json",
                    async: true,
                    beforeSend: function () {
                    },
                    success: function (json) {
                        //console.log(json.code);
                        if (json.code == 200) {
                            clearInterval(iCount);
                            iCount = null;
                            window.location.reload(); //刷新页面 后台登录  
                            // QrCodeChangeHeader();
                        }
                        else if (json.isexpire) {
                            //clearInterval(iCount);
                            //iCount = null;
                            //console.log(new Date());
                            //console.log("超时")
                            //layer.msg("二维码超时");
                            //二维码超时
                            // loadQr();
                        }
                    },
                    error: function (json) {
                    }
                });
            }//加载
            function QrCodeChangeHeader() {
