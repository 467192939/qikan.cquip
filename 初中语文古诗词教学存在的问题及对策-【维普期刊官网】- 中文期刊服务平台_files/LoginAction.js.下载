                        if (succ.Status) {
                            //成功后改变 页面 右上角
                            $.get("/Qikan/RegistLogin/LoginView", { t: randomString() }, function (data) {
                                //21-5-14
                                //$('#user-nav').find(".user-more").remove();
                                //$('#user-nav').find(".login-btn").remove();
                                $('#user-nav').empty();
                                $('#user-nav').append(data);
